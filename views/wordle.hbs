<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>42 - Wordle{{#eqs mode "hard"}} (Hard Mode){{/eqs}}</title>
	<link rel="icon" type="image/x-icon" href="/wordle/favicon.svg">
	<link rel="stylesheet" href="/wordle/style.css">

	<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
	<script>
		window.currentUserLogin = "{{userLogin}}";
		window.gameMode = "{{mode}}";
	</script>
	<script src="/wordle/script.js"></script>
</head>
<body>
	<div class="game-header">
		<h1>{{__ "title"}}</h1>
		{{#eqs mode "hard"}}
			<div class="hard-mode-indicator">
				<span class="hard-mode-badge">{{__ "hard_mode"}}</span>
				<div class="hard-mode-description">{{__ "hard_mode_desc"}}</div>
			</div>
		{{/eqs}}
		{{#if streak}}
			<div class="streak-info">
				🔥 {{__ "streak.current" }}: <b>{{streak.currentStreak}}</b>
				&nbsp;|&nbsp;
				🏆 {{__ "streak.best" }}: <b>{{streak.bestStreak}}</b>
			</div>
		{{/if}}
	</div>

	<div class="grid">
		<div class="row">
			<div id="wordle-1-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-1-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-1-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-1-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-1-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
		<div class="row">
			<div id="wordle-2-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-2-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-2-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-2-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-2-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
		<div class="row">
			<div id="wordle-3-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-3-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-3-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-3-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-3-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
		<div class="row">
			<div id="wordle-4-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-4-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-4-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-4-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-4-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
		<div class="row">
			<div id="wordle-5-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-5-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-5-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-5-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-5-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
		<div class="row">
			<div id="wordle-6-1" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-6-2" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-6-3" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-6-4" class="tile flip"><div class="front"></div><div class="back"></div></div>
			<div id="wordle-6-5" class="tile flip"><div class="front"></div><div class="back"></div></div>
		</div>
	</div>

	<div class="keyboard">
		<div class="keyboard-r">
			<button onclick="keyaction('Q')" class="key">Q</button><button onclick="keyaction('W')" class="key">W</button><button onclick="keyaction('E')" class="key">E</button><button onclick="keyaction('R')" class="key">R</button><button onclick="keyaction('T')" class="key">T</button><button onclick="keyaction('Y')" class="key">Y</button><button onclick="keyaction('U')" class="key">U</button><button onclick="keyaction('I')" class="key">I</button><button onclick="keyaction('O')" class="key">O</button><button onclick="keyaction('P')" class="key">P</button>
		</div>
		<div class="keyboard-r">
			<button onclick="keyaction('A')" class="key">A</button><button onclick="keyaction('S')" class="key">S</button><button onclick="keyaction('D')" class="key">D</button><button onclick="keyaction('F')" class="key">F</button><button onclick="keyaction('G')" class="key">G</button><button onclick="keyaction('H')" class="key">H</button><button onclick="keyaction('J')" class="key">J</button><button onclick="keyaction('K')" class="key">K</button><button onclick="keyaction('L')" class="key">L</button>
		</div>
		<div class="keyboard-r">
			<button onclick="keyaction('Enter')" class="key enter">Enter</button><button onclick="keyaction('Z')" class="key">Z</button><button onclick="keyaction('X')" class="key">X</button><button onclick="keyaction('C')" class="key">C</button><button onclick="keyaction('V')" class="key">V</button><button onclick="keyaction('B')" class="key">B</button><button onclick="keyaction('N')" class="key">N</button><button onclick="keyaction('M')" class="key">M</button><button onclick="keyaction('Backspace')" class="key backspace">⌫</button>
		</div>
	</div>

	<div class="leaderboards">
		<div class="leaderboard">
			<h2>{{ __ "last_players" }}</h2>
			<ul>
				{{#each leaderboards.latest}}
					<li class="center-li">{{login}}</li>
				{{/each}}
			</ul>
		</div>
		<div class="leaderboard">
			<h2>{{ __ "fastest_players" }}</h2>
			<ul>
				{{#each leaderboards.fastest}}
					{{#eqs attempts 7}}
						<li>{{login}} <span class="score looser">{{time}}s</span></li>
					{{else}}
						<li>{{login}} <span class="score">{{time}}s</span></li>
					{{/eqs}}
				{{/each}}
			</ul>
		</div>
		<div class="leaderboard">
			<h2>{{ __ "fewest_attempts" }}</h2>
			<ul>
				{{#each leaderboards.fewest_attempts}}
					{{#eqs attempts 7}}
						<li>{{login}} <span class="score looser">6 {{ __ "lead.attempts" }}</span></li>
					{{else}}
						<li>{{login}} <span class="score">{{attempts}} {{ __ "lead.attempts" }}</span></li>
					{{/eqs}}
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="home-button">
		<a href="/" class="home-link">← {{ __ "backhome" }}</a>
	</div>
	<div id="gameOverModal" class="modal hide-modal">
		<div class="modal-content">
			<span class="close">&times;</span>
			<h2 id="modalTitle">{{ __ "gameover" }}</h2>
			<div id="gameStats">
				<div class="stat">
					<span class="stat-label">{{ __ "stats.attempts" }}</span>
					<span id="attemptCount">{{stats.attempts}}</span>
				</div>
				<div class="stat">
					<span class="stat-label">{{ __ "stats.time" }}</span>
					<span id="timeCount">{{stats.time}}</span>
				</div>
			</div>
			<div id="shareResult"></div>
			<button id="shareButton" class="share-btn">
				<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
					<path d="M8.59 13.51l6.83 3.98m-.01-10.98l-6.82 3.98M21 5a3 3 0 11-6 0 3 3 0 016 0zM9 12a3 3 0 11-6 0 3 3 0 016 0zm12 7a3 3 0 11-6 0 3 3 0 016 0z"/>
				</svg>
				{{ __ "stats.share" }}
			</button>
			<div id="copyNotification" class="copy-notification">{{ __ "stats.copied" }}</div>
		</div>
	</div>

</body>
</html>
